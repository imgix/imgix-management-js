{
  "name": "imgix-management-js",
  "version": "1.3.1",
  "description": "A Javascript library that wraps the imgix management API",
  "main": "src/imgix-api.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "test:mocha": "mocha",
    "test:watch": "mocha --watch",
    "test": "npm run test:mocha && npm run tsd",
    "lint": "prettier --write '{src,test,types}/**/*.{js,ts}'",
    "tsd": "tsd"
  },
  "keywords": [
    "imgix",
    "api",
    "javascript",
    "management"
  ],
  "author": "Sherwin Heydarbeygi (https://github.com/sherwinski)",
  "license": "BSD-2-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imgix/imgix-management-js.git"
  },
  "dependencies": {
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/node-fetch": "2.6.1",
    "chai": "4.3.6",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "mocha": "9.2.2",
    "prettier": "2.6.2",
    "sinon": "13.0.2",
    "tsd": "0.20.0"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": "rc"
      },
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "deps",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "writerOpts": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "docs",
                "section": "Documentation",
                "hidden": false
              },
              {
                "type": "deps",
                "section": "Dependency Updates",
                "hidden": false
              },
              {
                "type": "chore",
                "hidden": true
              },
              {
                "type": "style",
                "hidden": true
              },
              {
                "type": "refactor",
                "hidden": true
              },
              {
                "type": "perf",
                "hidden": true
              },
              {
                "type": "test",
                "hidden": true
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "src/**",
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes} [skip ci]"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
